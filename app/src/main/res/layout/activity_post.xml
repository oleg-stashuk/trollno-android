<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main_group.PostActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/back_button_post_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_white_arrow_back" />

        <ImageButton
            android:id="@+id/favorite_button_post_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/comment_button_post_activity"
            android:src="@drawable/ic_favorite_border_button"/>

        <ImageButton
            android:id="@+id/comment_button_post_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_toLeftOf="@+id/share_button_post_activity"
            android:src="@drawable/ic_comment_button"/>

        <ImageButton
            android:id="@+id/share_button_post_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_comment_button"/>
    </RelativeLayout>




</LinearLayout>