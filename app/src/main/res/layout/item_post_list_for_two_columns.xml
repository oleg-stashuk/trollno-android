<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_post_list_for_two_columns"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:padding="10dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/image_post_two_columns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"/>

        <FrameLayout
            android:id="@+id/frame_layout_post_two_columns"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLightTransparent"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/title_post_two_columns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorText"
        android:textStyle="bold"
        android:hint="Описание видео"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discuss_image_post_two_columns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_discuss_arrow"/>

        <TextView
            android:id="@+id/discuss_text_post_two_columns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorOrange"
            android:textStyle="bold"
            android:text="@string/discuss_post" />

    </LinearLayout>

</LinearLayout>