<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/video_favorite_video_item"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:background="@color/colorGreyBackgroundVideo">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="5dp"
                    android:src="@drawable/ic_video_player"/>
            </LinearLayout>

            <TextView
                android:id="@+id/title_favorite_video_item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                android:maxLines="4"
                android:textSize="14dp"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                android:hint="Описание видео"/>

            <ImageButton
                android:id="@+id/delete_button_favorite_video_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_delete_grey" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
