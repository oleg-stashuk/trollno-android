<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_user_single_comment_child"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/name_user_single_comment_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/image_user_single_comment_child"
        android:layout_toEndOf="@+id/image_user_single_comment_child"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:letterSpacing="0.018"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/time_user_single_comment_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_below="@+id/name_user_single_comment_child"
        android:layout_toRightOf="@+id/image_user_single_comment_child"
        android:layout_toEndOf="@+id/image_user_single_comment_child"
        android:letterSpacing="0.018"
        android:textSize="14sp"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/comment_user_single_comment_child"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/image_user_single_comment_child"
        android:lineSpacingExtra="6dp"
        android:letterSpacing="0.016"
        android:textSize="16sp"
        android:textColor="@color/black" />


    <ImageView
        android:id="@+id/like_single_comment_child"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/comment_user_single_comment_child"
        android:src="@drawable/ic_favorite_border_color"/>

    <TextView
        android:id="@+id/count_like_single_comment_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/like_single_comment_child"
        android:layout_toEndOf="@+id/like_single_comment_child"
        android:layout_below="@+id/comment_user_single_comment_child"
        android:letterSpacing="0.016"
        android:textSize="16sp"
        android:textColor="@color/colorText"/>

    <TextView
        android:id="@+id/answer_single_comment_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/count_like_single_comment_child"
        android:layout_toEndOf="@+id/count_like_single_comment_child"
        android:layout_below="@+id/comment_user_single_comment_child"
        android:letterSpacing="0.016"
        android:textSize="16sp"
        android:textColor="@color/colorText"
        android:text="@string/answer" />

</RelativeLayout>