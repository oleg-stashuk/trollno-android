<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_user_single_comment_child"
        android:layout_width="30dp"
        android:layout_height="30dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">

        <TextView
            android:id="@+id/name_user_single_comment_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:hint="Name"/>

        <TextView
            android:id="@+id/time_user_single_comment_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/name_user_single_comment_child"
            android:hint="time" />

        <TextView
            android:id="@+id/comment_user_single_comment_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/name_user_single_comment_child"
            android:textColor="@color/colorText"
            android:hint="comment" />


        <ImageView
            android:id="@+id/like_single_comment_child"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/comment_user_single_comment_child"
            android:src="@drawable/ic_favorite_border_color"/>

        <TextView
            android:id="@+id/count_like_single_comment_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/like_single_comment_child"
            android:layout_below="@+id/comment_user_single_comment_child"
            android:hint="50" />

        <TextView
            android:id="@+id/answer_single_comment_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/count_like_single_comment_child"
            android:layout_below="@+id/comment_user_single_comment_child"
            android:text="@string/answer" />

    </RelativeLayout>

</LinearLayout>